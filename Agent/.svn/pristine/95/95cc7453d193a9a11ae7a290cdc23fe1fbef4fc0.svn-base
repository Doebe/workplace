#overlay {
	position: absolute;
	top: 0px;
	left: 0px;
	-o-transform : scaleX(-1);
	-webkit-transform : scaleX(-1);
	transform : scaleX(-1);
	-ms-filter : fliph; /*IE*/
	filter : fliph; /*IE*/

	width : 300px;
	height : 250px;
}

#videoel {
    position : absolute;
    top: 0px;
	left: 0px;
	-o-transform : scaleX(-1);
	-webkit-transform : scaleX(-1);
	transform : scaleX(-1);
	-ms-filter : fliph; /*IE*/
	filter : fliph; /*IE*/

	width : 300px;
	height : 250px;
}

#container {
	position : absolute;
    top: 0px;
	left: 0px;
	width : 300px;
	/*margin : 0px auto;*/
}

#content {
    position : absolute;
    top: 0px;
	left: 0px;
	/*margin-top : 50px;*/
	margin-left : auto;
	margin-right : auto;
	max-width: 300px;
}

#sketch, #filter {
	display: none;
}

h2 {
	font-weight : 400;
}

#controls {
    position : absolute;
    top: 0px;
	left: 0px;
	text-align : center;
}

#emotion_container {
    position : absolute;
    top: 250px;
	left: 0px;
	width: 300px;
}

#emotion_icons {
	height: 25px;
	padding-left: 40px;
}

.emotion_icon {
	width : 20px;
	height : 20px;
	margin-top: 5px;
	/*margin-left : 13px;*/
	margin-left : 45px;
}

#emotion_chart, #emotion_icons {
	margin: 0 auto;
	width : 300px;
}

#icon1, #icon2, #icon3, #icon4, #icon5, #icon6 {
	visibility : hidden;
}

/* d3 */
.bar {
	fill : steelblue;
	fill-opacity : .9;
}
