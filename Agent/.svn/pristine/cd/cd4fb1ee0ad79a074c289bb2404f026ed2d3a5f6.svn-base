/*
 * Style tweaks
 * --------------------------------------------------
 */
body, html, .container-fluid {
    overflow-x: hidden; /* Prevent scroll on narrow devices */
    padding-top: 25px;
    height: 100%;
    background: #222;
}

footer {
    padding: 30px 0;
}

.row-full{
    height: 100%;
}

[class^="col-"]  {
    height: 100%;
}

#videoel-overlay {
    position: absolute;
	top: 0px;
	left: 0px;
	-o-transform : scaleX(-1);
	-webkit-transform : scaleX(-1);
	transform : scaleX(-1);
	-ms-filter : fliph; /*IE*/
	filter : fliph; /*IE*/

	width : 300px;
	height : 250px;
}

#videoel {
    position : absolute;
    top: 0px;
	left: 0px;
	-o-transform : scaleX(-1);
	-webkit-transform : scaleX(-1);
	transform : scaleX(-1);
	-ms-filter : fliph; /*IE*/
	filter : fliph; /*IE*/

	width : 300px;
	height : 250px;
}

#videoel-container {
	position : absolute;
    top: 0px;
	left: 0px;
	width : 300px;
	/*margin : 0px auto;*/
}

#videoel-content {
    position : absolute;
    top: 0px;
	left: 0px;
	/*margin-top : 50px;*/
	margin-left : auto;
	margin-right : auto;
	max-width: 300px;
}